{
  "name": "rpc_ts",
  "version": "1.1.3",
  "description": "Remote Procedure Calls in TypeScript made simple",
  "repository": "git@github.com:aiden/rpc_ts.git",
  "author": "Dashbot Ltd",
  "license": "MIT",
  "private": false,
  "main": "lib/index.js",
  "unpkg": "dist/index.js",
  "module": "es/index.js",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@types/compression": "^0.0.36",
    "compression": "^1.0.3",
    "express": "^4.16.3",
    "fast-text-encoding": "^1.0.0",
    "grpc-web-client": "^0.6.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.5",
    "moment": "^2.14.1",
    "node-jose": "^1.0.0",
    "query-string": "^6.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/express": "^4.11.1",
    "@types/fetch-mock": "^6.0.3",
    "@types/lodash": "^4.14.106",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.47",
    "@types/query-string": "^5.1.0",
    "@types/sinon": "^2.3.7",
    "aiden-doc": "1.0.3",
    "chai": "3.5.0",
    "codedown": "^2.1.5",
    "coveralls": "^3.0.2",
    "fast-check": "^1.5.0",
    "fetch-mock": "^6.5.0",
    "gh-pages": "^2.0.1",
    "liquidjs": "^8.0.2",
    "mocha": "^4",
    "node-sass": "^4.11.0",
    "nyc": "^13.0.1",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.2",
    "shelljs": "^0.8.3",
    "sinon": "^4.0.1",
    "ts-node": "^4",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-language-service": "^0.9.8",
    "tslint-no-circular-imports": "^0.6.1",
    "type-zoo": "^1.2.1",
    "typedoc": "^0.13.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typescript": "3.2.2"
  },
  "scripts": {
    "clean": "rimraf lib dist es typedoc",
    "test": "mocha --exit -r tsconfig-paths/register 'lib/**/*.test.js'",
    "test:ts": "mocha --exit -r ts-node/register -r tsconfig-paths/register 'src/**/*.test.ts'",
    "coverage": "yarn nyc --reporter=html --reporter=text mocha --exit -r tsconfig-paths/register 'lib/**/*.test.js'",
    "coverage:upload": "yarn nyc report --reporter=text-lcov | ./node_modules/coveralls/bin/coveralls.js",
    "ts": "tsc -p tsconfig.json --noEmit",
    "ts:doc": "yarn extra-md-ts && tsc --noEmit --project tsconfig.doc.json",
    "build:es": "tsc -p tsconfig.json --declaration --module esnext --outDir ./es",
    "build:cjs": "tsc -p tsconfig.json --declaration --module commonjs --outDir ./lib",
    "build": "yarn run build:cjs && yarn run build:es",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write --ignore-path .gitignore '**/*.ts'",
    "format:check": "prettier -l --list-different --ignore-path .gitignore '**/*.ts'",
    "all": "yarn build && yarn ts && yarn ts:doc && yarn format:check && yarn lint && yarn test && yarn doc",
    "precommit": "lint-staged",
    "extra-md-ts": "cat README.md | yarn --silent codedown Typescript > readme_code.ts",
    "doc": "ts-node src/site/index.ts",
    "doc:serve": "yarn doc && (cd site/landing && bundle exec jekyll serve)",
    "doc:deploy": "yarn doc && yarn gh-pages -d typedoc -m '[ci skip] Updates'"
  },
  "lint-staged": {
    "{./*,typescript/**/*}.{js,jsx,ts,tsx,css,scss,md,json}": "prettier -l",
    "*.{ts,tsx}": "tslint -c tslint.json"
  },
  "npmName": "rpc_ts",
  "sideEffects": false,
  "keywords": [
    "typescript",
    "RPC",
    "API",
    "isomorphic",
    "gRPC-Web",
    "real-time"
  ]
}
