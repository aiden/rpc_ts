{
  "version": "3.1.6",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es2017",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "pretty": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["node", "mocha"],
    "lib": ["es7", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "rpc_ts/*": ["./*"],
      "rpc_ts": ["./"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules"],
  "compileOnSave": true,
  "watch": true
}
